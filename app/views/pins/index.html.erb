<%= render 'pages/home' unless user_signed_in? %>

  <div style="font-family: Cinzel; color: red;
  <h1></h1>
  <h1><button type="button" class="btn btn-default btn-lg">Here Is The Stuff. SHOOKAWOOKABOOMBOOM!</button></h1>
  </h1>
</div>

<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>
     <div class="box panel panel-default">
       <%= link_to image_tag(pin.image.url(:large)), pin %> 
        <div class="panel-body">
           <div style="font-family: Bangers;"
              <%=%><br/> 
               <%= pin.description %><br/> 
            </div>
             <div style="font-family: Indie Flower; color: #e74c3c"
                <strong><%= pin.user.email if pin.user %></strong>
            </div>
                <% if pin.user == current_user %>
                  <div class="actions">
                    <span class="glyphicon glyphicon-pencil"></span><%= link_to 'Edit |', edit_pin_path(pin) %>
                    <span class="glyphicon glyphicon-fire"></span><%= link_to 'Remove', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
                  </div>
                <% end %>
          </div>
      </div>
  <% end %>
</div>
</div>


