<%= link_to 'Back To All Stuff!', pins_path, class: "btn btn-danger btn-lg" %>

<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center">
        <%= image_tag @pin.image.url(:medium) %>
      </div>

 
  <div class="panel-body">
      <div style="font-family: Bangers"
      <div class="font-size1"  
            <p></p>
             <p><strong><%= @pin.description %></strong></p>
      </div>
      </div>
     <div class="font-size2"
      <div style="font-family: Indie Flower; color: #e74c3c"
            <p><strong><%= @pin.user.name if @pin.user %></strong></p>
           <% if current_user && @pin.user == current_user %>
                  <span class="glyphicon glyphicon-pencil"></span><%= link_to 'Edit', edit_pin_path(@pin) %>
                  <span class="glyphicon glyphicon-fire"></span><%= link_to 'Remove', @pin, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
      </div>
        </div>
      </div>
    </div>
  </div>
</div>

